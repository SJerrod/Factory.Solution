@{
  Layout = "_Layout";
}

<h1>Machines currently availible</h1>

@using Factory.Models;
@model List<Factory.Models.Machine>;

@if (@Model.Count == 0)
{
  <h3>There are no machines currently... consider buying some?</h3>
}

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add a new Machine", "Create")</p>